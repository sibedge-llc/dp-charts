apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: kyuubi-server
  labels:
    app: kyuubi
    release: install
    heritage: Helm
spec:
  serviceName: kyuubi-headless
  replicas: 1
  selector:
    matchLabels:
      app: kyuubi
      release: install
  template:
    metadata:
      labels:
        app: kyuubi
        release: install
    spec:
      containers:
        - name: kyuubi-server
          image: "harbor-awsbi.runit.cc/kyuubi/kyuubi:test5"
          imagePullPolicy: IfNotPresent
          env:
            - name: AWS_ACCESS_KEY_ID
              valueFrom:
                secretKeyRef:
                  name: spark-secrets
                  key: s3-rw-access-key
            - name: AWS_SECRET_ACCESS_KEY
              valueFrom:
                secretKeyRef:
                  name: spark-secrets
                  key: s3-rw-secret-key
          ports:
            - name: frontend-port
              containerPort: 10009
              protocol: TCP
          livenessProbe:
            tcpSocket:
              port: 10009
            initialDelaySeconds: 30
            periodSeconds: 10
            failureThreshold: 10
          readinessProbe:
            tcpSocket:
              port: 10009
            initialDelaySeconds: 30
            periodSeconds: 10
            failureThreshold: 10
          resources:
            limits:
              cpu: 2
              memory: 4Gi
            requests:
              cpu: 2
              memory: 4Gi
          volumeMounts:
            - name: kyuubi-defaults
              mountPath: /opt/kyuubi/conf
      nodeSelector: 
        role: spark
      tolerations: 
        - effect: NoExecute
          key: role
          operator: Equal
          value: spark
      serviceAccountName: install-kyuubi
      volumes:
        - name: kyuubi-defaults
          configMap:
            name: kyuubi-defaults
