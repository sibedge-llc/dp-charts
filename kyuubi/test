apiVersion: v1
kind: Service
metadata:
  name: kyuubi-svc
  labels:
    app: kyuubi
spec:
  ports:
    - name: http
      nodePort: 30009
      port: 10009
      protocol: TCP
  type: NodePort
  selector:
    app: kyuubi
    release: install
---
